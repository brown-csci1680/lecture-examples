    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch control",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/snowcast_control",
            "console": "integratedTerminal",
            "args": ["localhost", "16800", "12345"]
        },
        {
            "name": "Launch receiver",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/receiver",
            "console": "integratedTerminal",
            "args": ["localhost", "6666"]
        }
    ]
}